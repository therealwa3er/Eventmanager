<p id="notice"><%= notice %></p>

<h1>Subscribers</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= subscriber.event.title %></td>
        <td><%= subscriber.name %></td>
        <td><%= subscriber.email %></td>
        <td><%= link_to 'Show',  event_subscriber_path(subscriber.event, subscriber) %></td>
        <td><%= link_to 'Edit', edit_event_subscriber_path(subscriber.event, subscriber) %></td>
        <td><%= link_to 'Destroy', event_subscriber_path(subscriber.event, subscriber), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subscriber', new_event_subscriber_path(@event) %>
